<Window x:Class="IpcimWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IpcimWPF"
        mc:Ignorable="d"
        Title="IpcimWPF" Height="300" Width="550">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="dataGrid" Margin="15"/>
        <StackPanel Orientation="Vertical" Margin="5" Grid.Column="1" HorizontalAlignment="Left">
            <Label Content="Domain-name:" Margin="5"/>
            <TextBox x:Name="domainName" Width="150" Height="15" Margin="5"/>
            <Label Content="IP cím:" Margin="5"/>
            <TextBox x:Name="ipAddress" Width="150" Height="15" Margin="5"/>
            <Button Content="Bevitel" Width="50" HorizontalAlignment="Left" Margin="5"/>
            <Button Content="Mentés" Width="50" HorizontalAlignment="Left" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>